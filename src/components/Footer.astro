<style>
	.site-footer {
		margin-top: 3rem;
		border-top: 1px solid var(--border);
		background: linear-gradient(180deg, rgba(255, 255, 255, 0.02) 0%, rgba(34, 211, 238, 0.05) 100%);
	}

	.content {
		width: min(1180px, 100%);
		margin: 0 auto;
		padding: 2.5rem 1.5rem 3rem;
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
	}

	.eyebrow {
		color: var(--primary-soft);
		text-transform: uppercase;
		letter-spacing: 0.08em;
		margin: 0 0 0.35rem;
		font-weight: 600;
	}

	.social-links {
		display: flex;
		gap: 0.65rem;
		margin-top: 0.5rem;
	}

	.social-links a {
		width: 38px;
		height: 38px;
		display: grid;
		place-items: center;
		border-radius: 10px;
		border: 1px solid var(--border);
		background: rgba(255, 255, 255, 0.03);
		color: var(--text-muted);
		transition: 140ms ease;
	}

	.social-links a:hover {
		color: #f8fafc;
		border-color: rgba(139, 92, 246, 0.5);
		box-shadow: var(--glow);
	}

	.legal {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
		justify-content: space-between;
		align-items: center;
		border-top: 1px solid var(--border);
		padding-top: 1.25rem;
	}

	@media (max-width: 640px) {
		.content {
			padding: 2rem 1rem 2.5rem;
		}

		.legal {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style>
